{
    "openapi": "3.0.3",
    "info": {
        "title": "API Gensmart APP",
        "version": "1.0.0"
    },
    "paths": {
        "/v1/user": {
            "get": {
                "summary": "ambil data user",
                "tags": [
                    "users"
                ],
                "parameters": [
                    {
                        "name": "authorization",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "Bearer token123oijaosifdj"
                        },
                        "description": "Bearer token"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "berhasil mengambil data user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/user"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/user/register": {
            "post": {
                "summary": "user daftar",
                "tags": [
                    "users"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "role": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "berhasil daftar",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "Berhasil daftar"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/user/login": {
            "post": {
                "summary": "user login",
                "tags": [
                    "users"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "berhasil login",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string"
                                        },
                                        "token": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "message": "Berhasil login",
                                        "token": "eys098dufa0u325498ar834u"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/beasiswa": {
            "post": {
                "summary": "membuat beasiswa",
                "tags": [
                    "beasiswa"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "nama": {
                                        "type": "string"
                                    },
                                    "link": {
                                        "type": "string"
                                    },
                                    "deskripsi": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "berhasil membuat beasiswa",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "type": "string",
                                    "example": "Berhasil membuat beasiswa"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "tags": ["beasiswa"],
                "summary": "ambil banyak beasiswa",
                "responses": {
                    "200": {
                        "description": "berhasil mengambil banyak siswa",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/beasiswa"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/v1/beasiswa/{id}": {
            "get": {
                "summary": "ambil beasiswa by id",
                "tags": [
                    "beasiswa"
                ],
                "responses": {
                    "200": {
                        "description": "berhasil mengambil beasiswa by id",
                        "content": {
                            "text/plain": {
                                "schema": {
                                    "$ref": "#/components/schemas/beasiswa"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "user": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string"
                    },
                    "updated_at": {
                        "type": "string"
                    }
                }
            },
            "beasiswa": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "nama": {
                        "type": "string"
                    },
                    "link": {
                        "type": "string"
                    },
                    "deskripsi": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string"
                    },
                    "updated_at": {
                        "type": "string"
                    }
                }
            }
        }
    }
}